<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:showIn="@layout/activity_main"
        tools:context="de.danielbuecheler.ledblastercontroller.SteadyLightingFragment">

        <fragment
            android:id="@+id/steady_lighting_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_default_margin"
            android:name="de.danielbuecheler.ledblastercontroller.SteadyLightingFragment"
            tools:layout="@layout/fragment_steady_lighting" />

        <fragment
            android:id="@+id/fade_modes_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_default_margin"
            android:name="de.danielbuecheler.ledblastercontroller.FadeModesFragment"
            tools:layout="@layout/fragment_fade_modes" />

    </LinearLayout>
</ScrollView>